<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/yellowBin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/rubbish"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@id/redBin"
        app:srcCompat="@drawable/yellowbin" />

    <ImageView
        android:id="@+id/redBin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/rubbish"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/redbin"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/greenBin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/rubbish"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/yellowBin"
        app:srcCompat="@drawable/greenbin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp" />

    <ImageView
        android:id="@+id/rubbish"
        android:layout_width="match_parent"
        android:layout_height="532dp"
     />
</RelativeLayout>
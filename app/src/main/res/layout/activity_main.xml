<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".activityService.MainActivity">

    <Button
        android:id="@+id/PuzzleGame"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_below="@+id/imagePuzzleGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style6"
        android:text="Puzzle Game"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/WasteGame"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_below="@+id/imageWasteGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style6"
        android:text="Sort Waste"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp" />


    <Button
        android:id="@+id/LunchGame"
        android:layout_width="190dp"
        android:layout_height="43dp"
        android:layout_below="@+id/imageLunchGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_style6"
        android:text="Lunch Box"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/imagePuzzleGame"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:background="@drawable/puzzlegame" />


    <Button
        android:id="@+id/imageLunchGame"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_below="@+id/PuzzleGame"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lunchgame"/>

    <Button
        android:id="@+id/imageWasteGame"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_below="@+id/LunchGame"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/wastegame"/>

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/info_button" />


</RelativeLayout>